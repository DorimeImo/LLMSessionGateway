{
  "Redis": {
    "ConnectionStrings": "localhost:6379",
    "LockTtlSeconds": 15,
    "ActiveSessionTtlSeconds": 1800
  },
  "AzureBlob": {
    "ContainerName": "archivedsessions",
    "ConnectionString": "TODO"
  },
  "Logging": {
    "File": {
      "BasePath": "Logs",
      "FileNamePattern": "{Year}/{Month}/{Day}-{Hour}-{Minute}-log.txt",
      "RollingInterval": "Day"
    }
  },
  "OpenTelemetry": {
    "Jaeger": {
      "AgentHost": "localhost",
      "AgentPort": 6831
    }
  },
  "Grpc": {
    "ChatService": {
      "Host": "localhost",
      "Port": 6831
    },
    "Timeouts": {
      "OpenSession": "00:00:05",
      "SendMessage": "00:00:10",
      "StreamReplySetup": "00:00:10",
      "CloseSession": "00:00:05"
    }
  },
  "ApiLimits": {
    "MaxRequestBodySizeBytes": 1048576,
    "JsonMaxDepth": 32
  },
  "Auth": {
    "Jwt": {
      "Authority": "https://keycloak/realms/prod",
      "Audience": "llmsessiongateway-api",
      "ClockSkewSeconds": 30,
      "RequireSub": true,
      "ClaimNames": {
        "Scope": "scope",
        "Sub": "sub",
        "Tenant": "tenant"
      }
    }
  }
}
