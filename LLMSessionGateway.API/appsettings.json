{
  "Redis": {
    "ConnectionStrings": "localhost:6379",
    "LockTtlSeconds": 15,
    "ActiveSessionTtlSeconds": 1800
  },
  "AzureBlob": {
    "ContainerName": "archivedsessions",
    "ConnectionString": "TODO"
  },
  "Logging": {
    "File": {
      "BasePath": "Logs",
      "FileNamePattern": "{Year}/{Month}/{Day}-{Hour}-{Minute}-log.txt",
      "RollingInterval": "Day"
    }
  },
  "OpenTelemetry": {
    "Jaeger": {
      "AgentHost": "localhost",
      "AgentPort": 6831
    }
  },
  "Grpc": {
    "ChatService": {
      "Host": "chat-backend.internal.azurecontainerapps.io",
      "Port": 443,
      "UseTls": true,
      "EnableMtls": true,
      "ClientCertificateBase64Env": "PFX_B64",
      "ClientCertificatePasswordEnv": "PFX_PWD"
    },
    "Timeouts": {
      "OpenSeconds": 10,
      "SendSeconds": 20,
      "StreamSetupSeconds": 10,
      "CloseSeconds": 8,
      "MaxSendBytes": 4194304,
      "MaxReceiveBytes": 33554432
    }
  },
  "ApiLimits": {
    "MaxRequestBodySizeBytes": 1048576,
    "JsonMaxDepth": 32
  },
  "Auth": {
    "Jwt": {
      "Authority": "https://keycloak/realms/prod",
      "Audience": "llmsessiongateway-api",
      "ClockSkewSeconds": 30,
      "RequireSub": true,
      "ClaimNames": {
        "Scope": "scope",
        "Sub": "sub",
        "Tenant": "tenant"
      }
    }
  }
}
