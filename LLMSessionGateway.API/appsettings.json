{
  "Redis": {
    "ConnectionString": "localhost:6379",
    "LockTtlSeconds": 15,
    "ActiveSessionTtlSeconds": 1800
  },
  "AzureBlob": {
    "ContainerName": "archivedsessions",
    "ConnectionString": "UseDevelopmentStorage=true"
  },
  "Logging": {
    "File": {
      "BasePath": "Logs",
      "FileNamePattern": "{Year}/{Month}/{Day}-{Hour}-{Minute}-log.txt",
      "RollingInterval": "Day"
    }
  },
  "OpenTelemetry": {
    "Jaeger": {
      "AgentHost": "localhost",
      "AgentPort": 6831
    }
  },
  "Grpc": {
    "ChatService": {
      "Host": "localhost",
      "Port": 50051,
      "UseTls": true,
      "EnableMtls": false,
      "ClientCertificateBase64Env": "PFX_B64",
      "ClientCertificatePasswordEnv": "PFX_PWD",
      "Scope": "api://chat-backend/.default"
    },
    "Timeouts": {
      "OpenSeconds": 10,
      "SendSeconds": 20,
      "StreamSetupSeconds": 10,
      "CloseSeconds": 8,
      "MaxSendBytes": 4194304,
      "MaxReceiveBytes": 33554432
    }
  },
  "ApiLimits": {
    "MaxRequestBodySizeBytes": 1048576,
    "JsonMaxDepth": 32
  },
  "Auth": {
    "Jwt": {
      "Authority": "https://login.microsoftonline.com/<tenant-id>/v2.0",
      "Audience": "api://llmsessiongateway-api",
      "ClockSkewSeconds": 30,
      "RequireSub": true,
      "RequireHttpsMetadata": true,
      "ClaimNames": {
        "Scope": "scp",
        "Sub": "sub"
      }
    }
  }
}
